        <div id="results" class="result" style="display: none;">
            <h2>ผลการประเมินของคุณ</h2>
            <p id="stressResult"></p>
            <p id="depressionResult"></p>
            <p id="burnoutResult"></p>
            <p id="anxietyResult"></p>
            <p id="recommendation"></p>
        </div>
    </div>

    <script>
        function calculateResults() {
            const form = document.getElementById('screeningForm');
            let stressScore = 0, depressionScore = 0, burnoutScore = 0, anxietyScore = 0;

            // คำนวณคะแนน
            for (let i = 1; i <= 5; i++) {
                stressScore += parseInt(form[`stress${i}`]?.value || 0);
            }

            for (let i = 1; i <= 9; i++) {
                depressionScore += parseInt(form[`depression${i}`]?.value || 0);
            }

            for (let i = 1; i <= 3; i++) {
                burnoutScore += parseInt(form[`burnout${i}`]?.value || 0);
            }

            for (let i = 1; i <= 7; i++) {
                anxietyScore += parseInt(form[`anxiety${i}`]?.value || 0);
            }

            // แสดงผลคะแนน
            document.getElementById('stressResult').innerText = `คะแนนความเครียด: ${stressScore} - ${interpretStress(stressScore)}`;
            document.getElementById('depressionResult').innerText = `คะแนนภาวะซึมเศร้า: ${depressionScore} - ${interpretDepression(depressionScore)}`;
            document.getElementById('burnoutResult').innerText = `คะแนนภาวะเบื่อหน่าย: ${burnoutScore} - ${interpretBurnout(burnoutScore)}`;
            document.getElementById('anxietyResult').innerText = `คะแนนภาวะวิตกกังวล: ${anxietyScore} - ${interpretAnxiety(anxietyScore)}`;

            // คำแนะนำ
            document.getElementById('recommendation').innerText = generateRecommendations(stressScore, depressionScore, burnoutScore, anxietyScore);

            document.getElementById('results').style.display = 'block';
        }

        function interpretStress(score) {
            if (score <= 5) return 'น้อย';
            else if (score <= 10) return 'ปานกลาง';
            else return 'สูง';
        }

        function interpretDepression(score) {
            if (score <= 9) return 'น้อย';
            else if (score <= 14) return 'ปานกลาง';
            else if (score <= 19) return 'มาก';
            else return 'รุนแรง';
        }

        function interpretBurnout(score) {
            if (score <= 3) return 'น้อย';
            else if (score <= 6) return 'ปานกลาง';
            else return 'สูง';
        }

        function interpretAnxiety(score) {
            if (score <= 7) return 'น้อย';
            else if (score <= 14) return 'ปานกลาง';
            else if (score <= 21) return 'มาก';
            else return 'รุนแรง';
        }

        function generateRecommendations(stress, depression, burnout, anxiety) {
            let recommendation = "คำแนะนำของคุณคือ: \n";

            if (stress > 10) {
                recommendation += "ควรหาเวลาพักผ่อน ทำกิจกรรมที่ผ่อนคลาย และปรึกษาผู้เชี่ยวชาญหากจำเป็น. \n";
            }
            if (depression > 14) {
                recommendation += "ควรปรึกษานักจิตวิทยาหรือจิตแพทย์ เพื่อประเมินภาวะซึมเศร้าอย่างละเอียด. \n";
            }
            if (burnout > 6) {
                recommendation += "ควรหาเวลาพักผ่อน และปรึกษาผู้เชี่ยวชาญหากอาการยังคงอยู่. \n";
            }
            if (anxiety > 14) {
                recommendation += "ควรทำกิจกรรมที่ช่วยลดความวิตกกังวล เช่น การฝึกหายใจ และพิจารณาปรึกษาผู้เชี่ยวชาญ. \n";
            }

            return recommendation || "ผลการประเมินของคุณอยู่ในเกณฑ์ปกติ ไม่ต้องกังวลนะคะ.";
        }
    </script>
</body>
</html>
